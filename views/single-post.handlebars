<div class="post">
    
    <div class="card">
    <div class="card-header flex-row justify-space-between">
      <div>
        <h2>{{post.title}}</h2> 
      </div>
      <div class="username">
        <p class="small">Posted by {{post.User.username}} at {{ format_date post.createdAt}}</p>
      </div>
    </div>
    <div class="card-body">
      <p>{{post.body}}</p> 
    </div>
  </div>
  
</div>

<script src="/js/comment.js"></script>