<div class="posts list-group">
 
  {{#each posts as |post|}}
  <div class="card">
    <a href="/dashboard/edit/{{post.id}}">
    <div class="card-header flex-row justify-space-between">
      <div>
        <h2>{{post.title}}</h2> 
      </div>
      <div class="username">
        <p class="small">Posted by {{post.User.username}} at {{ format_date post.createdAt}}</p>
      </div>
    </div>
    </a>
    {{!-- <div class="card-body">
      <p>{{post.body}}</p> 
    </div> --}}
  </div>
  {{/each}}

</div>